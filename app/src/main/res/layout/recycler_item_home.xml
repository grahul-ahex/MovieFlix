<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorPrimary"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_900">

        <!--<com.santalu.aspectratioimageview.AspectRatioImageView-->
        <!--android:id="@+id/image_recycler_item_home"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="164"-->
        <!--android:scaleType="centerCrop"-->
        <!--app:ari_aspect="height"-->
        <!--app:ari_ratio="1.3" />-->
        <!--app:srcCompat="@drawable/imag" />-->
        <ImageView
            android:id="@+id/image_recycler_item_home"
            android:layout_width="112dp"
            android:layout_height="164dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:transitionName="@string/movie_image_transition_name" />

        <TextView
            android:id="@+id/tv_recycler_item_home"
            android:layout_width="110dp"
            android:layout_height="56dp"
            android:layout_below="@id/image_recycler_item_home"
            android:ellipsize="end"
            android:ems="@android:integer/config_longAnimTime"
            android:maxLines="2"
            android:padding="10dp"
            android:text="Title"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
